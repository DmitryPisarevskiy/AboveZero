    <TextView
        android:id="@+id/tvPressure6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/pressure_example6"
        app:layout_constraintEnd_toStartOf="@+id/tvTemp7"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toEndOf="@+id/tvTemp5"
        app:layout_constraintTop_toTopOf="@+id/tvPressure5" />

    <TextView
        android:id="@+id/tvWind1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/wind_example1"
        app:layout_constraintEnd_toStartOf="@+id/tvTemp2"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvTemp1" />

    <TextView
        android:id="@+id/tvWind3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/wind_example3"
        app:layout_constraintEnd_toStartOf="@+id/tvTemp4"
        app:layout_constraintHorizontal_bias="0.48"
        app:layout_constraintStart_toEndOf="@+id/tvTemp2"
        app:layout_constraintTop_toTopOf="@+id/tvWind2" />

    <TextView
        android:id="@+id/tvWind7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/wind_example7"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.486"
        app:layout_constraintStart_toEndOf="@+id/tvTemp6"
        app:layout_constraintTop_toTopOf="@+id/tvWind6" />

    <TextView
        android:id="@+id/tvWind5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/wind_example5"
        app:layout_constraintEnd_toStartOf="@+id/tvTemp6"
        app:layout_constraintHorizontal_bias="0.48"
        app:layout_constraintStart_toEndOf="@+id/tvTemp4"
        app:layout_constraintTop_toTopOf="@+id/tvWind4" />

    <TextView
        android:id="@+id/tvWind4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/wind_example4"
        app:layout_constraintEnd_toStartOf="@+id/tvTemp5"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toEndOf="@+id/tvTemp3"
        app:layout_constraintTop_toTopOf="@+id/tvWind3" />

    <TextView
        android:id="@+id/tvWind2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/wind_example2"
        app:layout_constraintEnd_toStartOf="@+id/tvTemp3"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toEndOf="@+id/tvTemp1"
        app:layout_constraintTop_toTopOf="@+id/tvWind1" />

    <TextView
        android:id="@+id/tvWind6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/wind_example6"
        app:layout_constraintEnd_toStartOf="@+id/tvTemp7"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toEndOf="@+id/tvTemp5"
        app:layout_constraintTop_toTopOf="@+id/tvWind5" />

    <ImageView
        android:id="@+id/iv7"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/iv6"
        app:layout_constraintTop_toTopOf="@+id/iv1"
        app:layout_constraintWidth_percent="0.10"
        app:srcCompat="@drawable/week_rain" />

    <ImageView
        android:id="@+id/iv6"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toStartOf="@+id/iv7"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/iv5"
        app:layout_constraintTop_toTopOf="@+id/iv1"
        app:layout_constraintWidth_percent="0.10"
        app:srcCompat="@drawable/sunny" />

    <ImageView
        android:id="@+id/iv5"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toStartOf="@+id/iv6"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/iv4"
        app:layout_constraintTop_toTopOf="@+id/iv1"
        app:layout_constraintWidth_percent="0.10"
        app:srcCompat="@drawable/week_cloudly" />

    <ImageView
        android:id="@+id/iv4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toStartOf="@+id/iv5"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/iv3"
        app:layout_constraintTop_toTopOf="@+id/iv1"
        app:layout_constraintWidth_percent="0.10"
        app:srcCompat="@drawable/sunny" />

    <ImageView
        android:id="@+id/iv2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toStartOf="@+id/iv3"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/iv1"
        app:layout_constraintTop_toTopOf="@+id/iv1"
        app:layout_constraintWidth_percent="0.10
"
        app:srcCompat="@drawable/week_cloudly" />

    <ImageView
        android:id="@+id/iv3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toStartOf="@+id/iv4"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/iv2"
        app:layout_constraintTop_toTopOf="@+id/iv1"
        app:layout_constraintWidth_percent="0.10"
        app:srcCompat="@drawable/strong_rain" />

    <ImageView
        android:id="@+id/iv1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toStartOf="@+id/iv2"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvTime1"
        app:layout_constraintWidth_percent="0.10"
        app:srcCompat="@drawable/week_rain" />

    <SeekBar
        android:id="@+id/seekBar"
        style="@style/Widget.AppCompat.SeekBar.Discrete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:max="2"
        android:progress="0"
        app:layout_constraintTop_toBottomOf="@+id/divider"
        tools:layout_editor_absoluteX="185dp" />

    <Spinner
        android:id="@+id/spCity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:dropDownWidth="wrap_content"
        android:entries="@array/cities_selected"
        android:spinnerMode="dropdown"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvTemp1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/temp_example1"
        app:layout_constraintEnd_toStartOf="@+id/tvTemp2"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv1" />

    <TextView
        android:id="@+id/tvTemp2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/temp_example2"
        app:layout_constraintEnd_toStartOf="@+id/tvTemp3"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/tvTemp1"
        app:layout_constraintTop_toTopOf="@+id/tvTemp1" />

    <TextView
        android:id="@+id/tvTemp3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/temp_example3"
        app:layout_constraintEnd_toStartOf="@+id/tvTemp4"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/tvTemp2"
        app:layout_constraintTop_toTopOf="@+id/tvTemp1" />

    <TextView
        android:id="@+id/tvTemp4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/temp_example4"
        app:layout_constraintEnd_toStartOf="@+id/tvTemp5"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/tvTemp3"
        app:layout_constraintTop_toTopOf="@+id/tvTemp1" />

    <TextView
        android:id="@+id/tvTemp5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/temp_example5"
        app:layout_constraintEnd_toStartOf="@+id/tvTemp6"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/tvTemp4"
        app:layout_constraintTop_toTopOf="@+id/tvTemp1" />

    <TextView
        android:id="@+id/tvTemp6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/temp_example6"
        app:layout_constraintEnd_toStartOf="@+id/tvTemp7"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/tvTemp5"
        app:layout_constraintTop_toTopOf="@+id/tvTemp1" />

    <TextView
        android:id="@+id/tvTemp7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/temp_example7"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/tvTemp6"
        app:layout_constraintTop_toTopOf="@+id/tvTemp1" />

    <TextView
        android:id="@+id/tvTime1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/hours_example1"
        app:layout_constraintEnd_toStartOf="@+id/tvTime2"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvDays" />

    <TextView
        android:id="@+id/tvTime2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/hours_example2"
        app:layout_constraintEnd_toStartOf="@+id/tvTime3"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/tvTime1"
        app:layout_constraintTop_toBottomOf="@+id/tvDays" />

    <TextView
        android:id="@+id/tvTime3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/hours_example3"
        app:layout_constraintEnd_toStartOf="@+id/tvTime4"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/tvTime2"
        app:layout_constraintTop_toBottomOf="@+id/tvDays" />

    <TextView
        android:id="@+id/tvTime4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/hours_example4"
        app:layout_constraintEnd_toStartOf="@+id/tvTime5"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/tvTime3"
        app:layout_constraintTop_toBottomOf="@+id/tvDays" />

    <TextView
        android:id="@+id/tvTime5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/hours_example5"
        app:layout_constraintEnd_toStartOf="@+id/tvTime6"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/tvTime4"
        app:layout_constraintTop_toBottomOf="@+id/tvDays" />

    <TextView
        android:id="@+id/tvTime6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/hours_example6"
        app:layout_constraintEnd_toStartOf="@+id/tvTime7"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/tvTime5"
        app:layout_constraintTop_toBottomOf="@+id/tvDays" />

    <TextView
        android:id="@+id/tvTime7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/hours_example7"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/tvTime6"
        app:layout_constraintTop_toBottomOf="@+id/tvDays" />

    <TextView
        android:id="@+id/tvWeeks"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="5dp"
        android:text="@string/weeks"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/seekBar" />

    <TextView
        android:id="@+id/tvDays"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/days"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/seekBar" />

    <TextView
        android:id="@+id/tvHours"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:text="@string/hours"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/seekBar" />

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cityFrame" />

    <FrameLayout
        android:id="@+id/cityFrame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spCity">
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>