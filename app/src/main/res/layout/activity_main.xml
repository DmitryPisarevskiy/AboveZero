        app:layout_constraintStart_toEndOf="@+id/tvTemp6"
        app:layout_constraintTop_toTopOf="@+id/tvPressure6" />

    <TextView
        android:id="@+id/tvPressure3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/pressure_example3"
        app:layout_constraintEnd_toStartOf="@+id/tvTemp4"
        app:layout_constraintHorizontal_bias="0.48"
        app:layout_constraintStart_toEndOf="@+id/tvTemp2"
        app:layout_constraintTop_toTopOf="@+id/tvPressure2" />

    <TextView
        android:id="@+id/tvPressure4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/pressure_example4"
        app:layout_constraintEnd_toStartOf="@+id/tvTemp5"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toEndOf="@+id/tvTemp3"
