<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tvPressure1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/pressure_example1"
        app:layout_constraintEnd_toStartOf="@+id/tvTemp2"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvWind1" />

    <TextView
        android:id="@+id/tvPressure5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/pressure_example5"
        app:layout_constraintEnd_toStartOf="@+id/tvTemp6"
        app:layout_constraintHorizontal_bias="0.48"
        app:layout_constraintStart_toEndOf="@+id/tvTemp4"
        app:layout_constraintTop_toTopOf="@+id/tvPressure4" />

    <TextView
        android:id="@+id/tvPressure2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/pressure_example2"
        app:layout_constraintEnd_toStartOf="@+id/tvTemp3"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toEndOf="@+id/tvTemp1"
        app:layout_constraintTop_toTopOf="@+id/tvPressure1" />

    <TextView
        android:id="@+id/tvPressure7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/pressure_example7"
        app:layout_constraintEnd_toEndOf="parent"
